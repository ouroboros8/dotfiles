[user]
    email = dstrong@glyx.co.uk
    name = Daniel Strong
[includeIf "gitdir:~/hmrc/**"]
    path = ~/hmrc/dotfiles/gitconfig
[push]
    default = simple
[branch]
    autosetuprebase = always
[commit]
    verbose = true
[core]
    editor = nvim
    excludesfile = /home/dan/.gitignore
    pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
    a   = add
    aa  = add .
    ai  = add -i
    b   = branch
    ci  = commit
    ca  = commit -a
    co  = checkout
    d   = diff
    dc  = diff --word-diff --word-diff-regex='.'
    dci = diff --word-diff --word-diff-regex='.' --cached
    di  = diff --cached
    dw  = diff --word-diff
    dwi = diff --word-diff --cached
    lg  = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ph  = push -u origin HEAD
    pl  = pull
    pr  = pull-request -c
    r   = rebase
    s   = status
    smash = commit -a --amend
